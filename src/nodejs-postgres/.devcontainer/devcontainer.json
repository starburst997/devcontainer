{
  "name": "${localWorkspaceFolderBasename}",
  "dockerComposeFile": "docker-compose.yml",
  "remoteUser": "root",
  "containerUser": "root",
  "service": "app",
  "workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",
  "features": {
    "ghcr.io/devcontainers-extra/features/pnpm": "latest"
  },
  "forwardPorts": [5432, 9229],
  "postCreateCommand": "pnpm i --frozen-lockfile --force || npm install",
  "postStartCommand": "gh auth setup-git || true",
  "customizations": {
    "vscode": {
      "extensions": [
        "Prisma.prisma",
        "ms-azuretools.vscode-containers",
        "anysphere.remote-containers",
        "bradlc.vscode-tailwindcss",
        "esbenp.prettier-vscode",
        "rvest.vs-code-prettier-eslint",
        "walnuts1018.oklch-vscode",
        "dbaeumer.vscode-eslint",
        "ms-azuretools.vscode-docker",
        "streetsidesoftware.code-spell-checker",
        "anthropic.claude-code",
        "hookyqr.beautify",
        "jdboivin.jd-abyss"
      ]
    },
    "settings": {
      "remote.containers.copyGitConfig": true
    }
  },
  "mounts": [
    "source=${localEnv:SSH_AUTH_SOCK},target=/run/host-services/ssh-auth.sock,type=bind,readonly",
    "source=claude-code-bashhistory-${devcontainerId},target=/commandhistory,type=volume",
    "source=${localEnv:HOME}/.claude,target=/root/.claude,type=bind",
    "source=${localEnv:HOME}/.config/gh,target=/root/.config/gh,type=bind",
    "source=${localEnv:HOME}/.p10k.zsh,target=/root/.p10k.zsh,type=bind,readonly"
  ],
  "remoteEnv": {
    "SSH_AUTH_SOCK": "/run/host-services/ssh-auth.sock",
    "GH_TOKEN": "${localEnv:GH_TOKEN}",
    "GITHUB_TOKEN": "${localEnv:GITHUB_TOKEN}"
  },
  "containerEnv": {
    "CLAUDE_CONFIG_DIR": "/root/.claude"
  }
}
