{
  "id": "nodejs-postgres",
  "version": "1.0.0",
  "name": "Node.js + PostgreSQL Development",
  "description": "Node.js development environment with PostgreSQL, PowerLevel10k, neovim, Claude Code, and GitHub CLI",
  "documentationURL": "https://github.com/starburst997/devcontainer",
  "licenseURL": "https://github.com/starburst997/devcontainer/blob/main/LICENSE",
  "options": {
    "nodeVersion": {
      "type": "string",
      "description": "Node.js version",
      "proposals": ["24", "22", "20", "18"],
      "default": "24"
    },
    "postgresVersion": {
      "type": "string",
      "description": "PostgreSQL version",
      "proposals": ["latest", "16", "15", "14"],
      "default": "latest"
    }
  },
  "platforms": [
    "Node.js",
    "JavaScript",
    "TypeScript"
  ],
  "keywords": [
    "node",
    "nodejs",
    "javascript",
    "typescript",
    "postgres",
    "postgresql",
    "database",
    "powerlevel10k",
    "zsh",
    "neovim",
    "claude",
    "gh"
  ]
}
